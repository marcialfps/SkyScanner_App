<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_span="2">

    <androidx.cardview.widget.CardView
        android:id="@+id/arrivalsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/arrivalsTable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/arrivalsRowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border_head"

                android:textAlignment="viewStart">

                <TextView
                    android:id="@+id/txArrivalsTableTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="@string/arrivals_incoming"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    tools:text="@string/arrivals_arrivals" />
            </TableRow>

            <TableRow
                android:id="@+id/arrivalsRow0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_border"
                android:padding="6dp">

                <TextView
                    android:id="@+id/txArrivalName0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:text="@string/flight_default_city"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_city" />

                <TextView
                    android:id="@+id/txArrivalTime0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_default_time"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_time" />
            </TableRow>

            <TableRow
                android:id="@+id/arrivalsRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:background="@drawable/table_border"
                >

                <TextView
                    android:id="@+id/txArrivalName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:text="@string/flight_default_city"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_city" />

                <TextView
                    android:id="@+id/txArrivalTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_default_time"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_time" />

            </TableRow>

            <TableRow
                android:id="@+id/arrivalsRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:background="@drawable/table_border"
                >

                <TextView
                    android:id="@+id/txArrivalName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:text="@string/flight_default_city"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_city" />

                <TextView
                    android:id="@+id/txArrivalTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_default_time"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_time" />
            </TableRow>

            <TableRow
                android:id="@+id/arrivalsRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_border"
                android:padding="6dp">

                <TextView
                    android:id="@+id/txArrivalName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:text="@string/flight_default_city"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_city" />

                <TextView
                    android:id="@+id/txArrivalTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_default_time"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    tools:text="@string/flight_default_time" />
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>